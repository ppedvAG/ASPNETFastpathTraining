@page 
@using Models
@using Microsoft.EntityFrameworkCore
@inject KundenContext db
@model ASPNETFastpathTraining.Pages.Modul06.SucheModel
@{
}
<div class="row">
    <div class="col">
        <form >
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="suche" 
               name="suchtext"
            >
            <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-search"></i></button>
        </div>
        </form>
    </div>
</div>


<div class="row">
    <div class="col">

        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>

                    <th>PLZ</th>
                    <th>Ort</th>
                    <th>Anzahl</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in db.Kundes.Include("Auftrags").Where(x => x.Name.Contains(Request.Query["suchtext"])))
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Plz</td>
                        <td>@item.Ort</td>
                        <td><span class="badge bg-secondary">@item.Auftrags.Count</span></td>
                    </tr>
                }
                
            </tbody>
          
        </table>
    </div>
</div>

