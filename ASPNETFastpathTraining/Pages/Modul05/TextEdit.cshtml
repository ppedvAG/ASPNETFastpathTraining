@page "/text/{fileName?}"
@model ASPNETFastpathTraining.Pages.Modul05.TextEditModel
@{
}
<div class="container">
    <div class="row">
        <div class="col">
            <div class="list-group">
                <div class="list-group-item active">Templates</div>
      
                @foreach (var item in Model.Liste)
                {
                    <a asp-page="/modul05/TextEdit" asp-route-fileName="@item"
                    class="list-group-item list-group-item-action">@item </a>

                }
            </div>
        </div>

        <div class="col">
         <h2>Edit File</h2>
         <form method="post">
             <textarea name="Inhalt" rows="10" cols="50">
                 @Model.fileContent
             </textarea>
             <input type="submit" value="save"/>
         </form>
        </div>
    </div>
</div>