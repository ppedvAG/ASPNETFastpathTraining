@page "{monat:int?}"
@model ASPNETFastpathTraining.Pages.Modul05.MonateModel
@{
}
<div class="container">
    <div class="row">
        <div class="col">
            <div class="list-group">
                <div class="list-group-item active">Monate</div>
                @for (int i = 0; i < 12; i++)
                {
                    <a class="list-group-item list-group-item-action"
                      asp-page="/modul05/monate" asp-route-monat="@i"
                    >
                        @DateTime.Now.AddMonths(i).ToString("MMMM")
                    </a>

                }
            </div>
        </div>

        <div class="col">
            Monat @RouteData.Values["monat"] - @Model.Monat
            <h1> @DateTime.Now.AddMonths(int.Parse(RouteData.Values["monat"].ToString())).ToString("MMMM")</h1>
        </div>
    </div>
</div>